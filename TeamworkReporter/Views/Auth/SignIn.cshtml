@model TeamworkReporter.Models.Auth.SignInViewModel

@{
    ViewBag.Title = "Sign In";
}

@using (Html.BeginForm("SignIn", "Auth", FormMethod.Post, new {@class = "form-auth"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h4>Sign In</h4>
    @Html.EditorForModel()
    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign In</button>
    <button type="button" class="btn btn-xs btn-default btn-block">@Html.ActionLink("Sign Up","SignUp")</button>
    <button type="button" class="btn btn-xs btn-default btn-block">@Html.ActionLink("Forget password?","ForgetPassword")</button>
}