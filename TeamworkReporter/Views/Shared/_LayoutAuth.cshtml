@using System.Web.Optimization
@using TeamworkReporter.Types.Extensions
@{
    string pageTitle = ViewBag.Title;
    var title = string.IsNullOrWhiteSpace(pageTitle) ? "Teamwork Reporter" : pageTitle + " : Teamwork Reporter";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@Html.Raw(title)</title>
        @Styles.Render("~/bundles/css-auth")
        @RenderSection("styles", false)
    </head>
    <body>
        <div class="panel panel-default auth-panel">
            <div class="panel-heading">
                <h3 class="panel-title">Teamwork Reporter</h3>
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
            <div class="panel-footer text-muted">@Html.GetCopyrights() (@Html.GetVersion())</div>
        </div>
        @Scripts.Render("~/bundles/js")
        @RenderSection("scripts", false)
    </body>
</html>