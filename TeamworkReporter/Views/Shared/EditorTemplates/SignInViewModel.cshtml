@model TeamworkReporter.Models.Auth.SignInViewModel

@{
    var isChecked = Model.RememberMe ? " checked=1 " : string.Empty;
}
@Html.HiddenFor(m=>m.ReturnUrl)

<label for="inputEmail" class="sr-only">Email</label>
<input type="email" id="inputEmail" name="@Html.NameFor(m => m.Email)" class="form-control" placeholder="Email" required autofocus value="@Html.ValueFor(m=> m.Email)">
@Html.ValidationMessageFor(m => m.Email)

<label for="inputPassword" class="sr-only">Password</label>
<input type="password" id="inputPassword" name="@Html.NameFor(m => m.Password)" class="form-control" placeholder="Password" required value="@Html.ValueFor(m=> m.Password)">
@Html.ValidationMessageFor(m => m.Password)

<div class="checkbox">
    <label>
        <input type="checkbox" value="remember-me" name="@Html.NameFor(m => m.RememberMe)" @isChecked> Remember me
    </label>
</div>