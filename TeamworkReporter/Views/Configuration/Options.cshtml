@using TeamworkReporter.Models
@model TeamworkReporter.Models.OptionsViewModel
@{
    ViewBag.Title = "Options";
}
@using (Html.BeginForm("Options"))
{
    <div class="form-group">
        <label for="inputAccount">Account</label>
        <input type="text" class="form-control" id="inputAccount" placeholder="Account" name="@Html.NameFor(m => m.Account)" value="@Model.Account">
    </div>
    <div class="form-group">
        <label for="inputToken">Token</label>
        <input type="text" class="form-control" id="inputToken" placeholder="Token" name="@Html.NameFor(m => m.Token)" value="@Model.Token">
    </div>
  
    <button type="submit" name="@Html.NameFor(m => m.Command)" value="@Command.OptionsSave">Save</button>
    <button type="submit" name="@Html.NameFor(m => m.Command)" value="@Command.OptionsClear">Clear</button>
}